<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteAsh"
    android:orientation="vertical"
    tools:context=".WithdrawActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:elevation="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/white_circle"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/w_shortNameTv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/green_circle"
                android:padding="15dp"
                android:text="A"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp"

                android:textStyle="bold" />




        </RelativeLayout>

        <TextView
            android:id="@+id/w_nameTv"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="Aria Khan"
            android:layout_centerInParent="true"
            android:textColor="@color/blackAsh"
            android:textSize="30dp"


            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="17sp"
                    android:textColor="@color/blackAsh"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/w_balanceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="\u09F30"
                    android:textColor="@color/greenDark"
                    android:textSize="19sp"
                    android:textStyle="bold"


                    />




            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:text="Payment Method"
            android:layout_centerInParent="true"
            android:textColor="@color/blackAsh"
            android:textSize="16sp"


            />
        <androidx.cardview.widget.CardView
            android:id="@+id/w_bkashCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bKash"
                    android:textSize="17sp"
                    android:textColor="@color/blackAsh"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@color/greenDark"
                    android:id="@+id/w_bkashCard_Amount"

                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />




            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/w_NagadCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Nagad"
                    android:textColor="@color/blackAsh"
                    android:textSize="17sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@color/greenDark"
                    android:id="@+id/w_NagadCard_Amount"

                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />




            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/w_RechargeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Recharge"
                    android:textColor="@color/blackAsh"
                    android:textSize="17sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:id="@+id/w_RechargeCard_Amount"

                    android:textColor="@color/greenDark"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/w_selectedMethodTv"
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:text="Enter Your bKash Number"
            android:layout_centerInParent="true"
            android:textColor="@color/blackAsh"
            android:textSize="16sp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/w_accountNoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="Phone Number"
                android:padding="15dp"
                android:textColorHint="@color/blackAsh"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textAlignment="center"
                />


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/w_CashoutButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="Cash Out"
            android:textColor="#fff"
            android:textAllCaps="false"

            />

    </LinearLayout>

</ScrollView>