<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="30dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/quizItemImageViewId"
            />

        <LinearLayout
            android:layout_toLeftOf="@+id/quizEndImageviewId"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/quizItemImageViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buisness Survey"
                android:textColor="@color/blackDark"
                android:textStyle="bold"
                android:textSize="19sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Survey And Win Reward"
                android:textColor="@color/blackAsh"
                android:textStyle="bold"
                android:textSize="16sp"

                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_medal"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="\u09F31.45"
                    android:layout_centerInParent="true"
                    android:textColor="@color/greenDark"
                    android:textSize="18dp"


                    />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/quizEndImageviewId"
            />





    </RelativeLayout>





</androidx.cardview.widget.CardView>